---
import Header from "../components/Header.astro";
import Head from "./Head.astro";

const {
  title = "CRM - IndexedDB",
  description = "Sistema para administrar clientes",
} = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <Head {title} {description} />
  <body>
    <section class="flex flex-col lg:flex-row h-screen">
      <Header />
      <main class="px-4 py-8 xs:px-8 w-full bg-teal-50 h-full">
        <slot />
      </main>
    </section>
  </body>
</html>
